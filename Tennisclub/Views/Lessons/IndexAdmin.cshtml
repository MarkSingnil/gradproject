@model IEnumerable<Tennisclub.Models.Lesson>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="col-lg-12">
        <h1 class="page-header">Lesson's Information</h1>
    </div>
    <p>
        @Html.ActionLink("Add New Lesson Here", "Create")
    </p>
    <table class="table table-striped table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employee.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LessonName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LessonDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LessonDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LessonName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LessonDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LessonDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImagePath)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.LessonID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.LessonID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.LessonID })
                </td>
            </tr>
        }

    </table>
    </div>